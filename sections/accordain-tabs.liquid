


  <div class="singel-accordian">
    <div class="accordion">{{ section.settings.title }}     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"  fill="currentColor" style="width:100%;height:100%"><path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"></path></svg></div>
   
        <div class="panel">
          {% for item in section.blocks %}
         <a href="{{ item.settings.link }}" class="panel-with-btn">{{ item.settings.btn }}</a>
        {% endfor %}
        </div>
     

    </div>
    





    <style>
      .lading-page{
       text-align:center;
      }

    .accordion svg {
      width: 20px !important;
      height: 20px;
  }
    .singel-accordian {
      max-width: 360px;
      display: block;
      margin: 0 auto;
      text-align: center;
  }
  .accordion {
    color: #444;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    font-size: 15px;
    transition: 0.4s;
    display: flex;
    justify-content: space-between;
    background: transparent;
    border-top: 1px solid #000;
    font-size: 40px;
    align-items:center;
    font-weight: 500;
    line-height: 42px;
}

      {% comment %} .active, .accordion:hover {
        background-color: #ccc; 
      }
       {% endcomment %}
      .panel {
        padding: 0 18px;
        display: none;
        background-color: white;
        overflow: hidden;
      }

      a.panel-with-btn {
        display: block;
        border: 1px solid #000;
        padding: 20px;
        font-size:20px;
    }
      </style>
{% schema %}
  {
    "name": "Loading page Header",
    "class": "lading-page",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title Name",
      "default": "Wall Sconces",
      "placeholder": "Wall Sconces"
    }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Hyperlink",
        "settings": [
          {
            "type": "text",
            "id": "btn",
            "label": "Select your btn title",
            "default": "Sconces",
            "placeholder": "Sconces"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Select your Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "landing page button"
      }
    ]
  }
{% endschema %}
