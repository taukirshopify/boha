


  <div class="singel-accordian">
    <button class="accordion">{{ section.settings.title }}     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="1em" height="1em" fill="currentColor" style="width:100%;height:100%"><path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"></path></svg></button>
    {% for item in section.blocks %}
        <div class="panel">
         <a href="{{ item.settings.link }}" class="panel-with-btn">{{ item.settings.btn }}</a>
        </div>
      {% endfor %}

    </div>
    





    <style>
      .lading-page{
       text-align:center;
      }
      .accordion {
        color: #333333;
        flex-grow: 1;
        font-size: 40px;
        font-weight: 500;
        line-height: 42px;
        flex-shrink: 0;
        flex-basis: auto;
        overflow-wrap: break-word;
      
        border-top:1px solid #000;
    }

    .singel-accordian {
      max-width: 360px;
      display: block;
      margin: 0 auto;
      text-align: center;
  }
      .accordion {
      
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
      }
      
      {% comment %} .active, .accordion:hover {
        background-color: #ccc; 
      }
       {% endcomment %}
      .panel {
        padding: 0 18px;
        display: none;
        background-color: white;
        overflow: hidden;
      }
      </style>
{% schema %}
  {
    "name": "Loading page Header",
    "class": "lading-page",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title Name",
      "default": "Wall Sconces",
      "placeholder": "Wall Sconces"
    }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Hyperlink",
        "settings": [
          {
            "type": "text",
            "id": "btn",
            "label": "Select your btn title",
            "default": "Sconces",
            "placeholder": "Sconces"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Select your Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "landing page button"
      }
    ]
  }
{% endschema %}
