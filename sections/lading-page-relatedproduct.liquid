
<div class="shop-all-wrapper">
   <a href="{{  section.settings.shopurl }}" class="btn-round"> {{  section.settings.shopall }} </a>
</div>
<section class="collection-list__container ">
    <div class="slider-header">
     <p>{{ section.settings.title }}</p>
     <a href="{{section.settings.url}}" class="btn">{{ section.settings.btn-text}}</a>
    </div>
      <div class="slider-proudct">
      <!-- First slider codes -->
  
      
      </div>
    
  </section>
  <section class="splide" id="first-slider" aria-label="Splide Basic HTML Example">
      <div class="splide__track">
        <ul class="splide__list">
  
          {% for block in section.blocks %}
           
          {% case block.type %}
              {% when 'collection' %}
                  {% for product in collections[block.settings.collection].products %}
                      <li class="splide__slide"> 
                        {{product.title}}
                      </li>
                  {% endfor %}
              
              {% when 'product' %}
                  <li class="splide__slide"> 
                    {{product.title}}
                    {{ product.price }}
                 </li>
                 {% when 'manually' %}
                  <li class="splide__slide "> 
                     <div class="singel-proudct-wrapper">
                       <div class="image-wrapper">
                        <img src="{{ block.settings.img | img_url:'' }}" alt="">
                        <img src="{{ block.settings.img2 | img_url:'' }}" class="hover-image" alt="">
                       </div>
                      <div class="singel-porduct-content-wrapper">
                      
                        <a href="{{ block.settings.url }}" class="proudct-heading">   <h6>{{ block.settings.h6 }}</h6>  
                        <p>{{ block.settings.p }}</p>
                         </a>
                       <a href="{{ block.settings.url }}" class="btn shopnow"> {{ block.settings.btn }}  
                       
                       <div class="prices"> <span> $ {{ block.settings.price }}</span> {% if block.settings.com == blank %} {% else %} <del> - $  {{block.settings.com }}</del>{% endif %} </div> </a>
                  
                      </div>

                      </div>
                 </li>
              
          {% endcase %}
  
  
         {% endfor %}
      
         
  
  
  
        </ul>
      </div>

    <div class="splide__arrows splide__arrows--ltr">
  <button
    class="splide__arrow splide__arrow--prev"
    type="button"
    aria-label="Previous slide"
    aria-controls="splide01-track"
  >
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" height="16px" width="16px" version="1.1" id="Capa_1" viewBox="0 0 47.255 47.255" xml:space="preserve">
