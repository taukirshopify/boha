    text-decoration: unset;
       color:#000;
      
}
        a.proudct-heading:hover{
    text-decoration: underline;
}

       .singel-porduct-content-wrapper{
} 
        .splide__slide {
         
          padding: 0 7.5px;
      
        }
        .splide__slide  img{
         width: 100%;
        }
