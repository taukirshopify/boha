

<section class="collection-list__container ">
    <div class="slider-header">
     <p>{{ section.settings.title }}</p>
     <a href="{{section.settings.url}}" class="btn">{{ section.settings.btn-text}}</a>
    </div>
      <div class="slider-proudct">
      <!-- First slider codes -->
  
      
      </div>
    
  </section>
  <section class="splide" id="first-slider" aria-label="Splide Basic HTML Example">
      <div class="splide__track">
        <ul class="splide__list">
  
          {% for block in section.blocks %}
           
          {% case block.type %}
              {% when 'collection' %}
                  {% for product in collections[block.settings.collection].products %}
                      <li class="splide__slide"> 
                        {{product.title}}
                      </li>
                  {% endfor %}
              
              {% when 'product' %}
                  <li class="splide__slide"> 
                    {{product.title}}
                    {{ product.price }}
                 </li>
                 {% when 'manually' %}
                  <li class="splide__slide "> 
                     <div class="singel-proudct-wrapper">
                       <div class="image-wrapper">
                        <img src="{{ block.settings.img | img_url:'' }}" alt="">
                        <img src="{{ block.settings.img2 | img_url:'' }}" class="hover-image" alt="">
                       </div>
                      <div class="singel-porduct-content-wrapper">
                      
                        <a href="{{ block.settings.url }}" class="proudct-heading">   <h6>{{ block.settings.h6 }}</h6>  
                        <p>{{ block.settings.p }}</p>
                         </a>
                       <a href="{{ block.settings.url }}" class="btn shopnow"> {{ block.settings.btn }}  
                       
                       <div class="prices"> <span>  {{ block.settings.price }}</span> <del>  {{block.settings.com }}</del> </div> </a>
                  
                      </div>

                      </div>
                 </li>
              
          {% endcase %}
  
  
         {% endfor %}
      
         
  
  
  
        </ul>
      </div>

    <div class="splide__arrows splide__arrows--ltr">
  <button
    class="splide__arrow splide__arrow--prev"
    type="button"
    aria-label="Previous slide"
    aria-controls="splide01-track"
  >
    prev
  </button>
  <button
    class="splide__arrow splide__arrow--next"
    type="button"
    aria-label="Next slide"
    aria-controls="splide01-track"
  >
    next
  </button>
</div>
    </section>
  
  <style>
  .slider-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
  
   .image-wrapper.w3_bg {
    position: relative;
}
    .singel-proudct-wrapper h6 , .singel-proudct-wrapper p {
    padding: 0;
    margin: 0;
}
    img.hover-image {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    opacity: 0;
    height: 100%;
       transition: 0.3s all ;
}   .image-wrapper:hover img.hover-image {
    opacity: 1;
}
.singel-porduct-content-wrapper{
  background:#f4f4f4;
  padding: 12px ;
}
    .proudct-heading h6{
    color:#000;
}
        .proudct-heading p{
    color:#000;
                 margin: 6px 0 10px 0;
}

    a.proudct-heading {
    text-decoration: unset;
       color:#000;
      
}
        a.proudct-heading:hover{
    text-decoration: underline;
}

       .singel-porduct-content-wrapper{
} 
        .splide__slide {
         
          padding: 0 7.5px;
      
        }
        .splide__slide  img{
         width: 100%;
        }
      .splide__slide img {
    vertical-align: bottom;
    width: 100%;
}

    a.btn.shopnow {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 11px 16px;
    color: #000;
      text-decoration: none;
    font-weight: 600;
}
        </style>
  
  
  <script>
      document.addEventListener("DOMContentLoaded", () => {
  
  
  
          let splide = new Splide( '#first-slider', {
              pagination :    true ,
                        paginationKeyboard: true,
                          type   : 'loop',
                          drag   : 'free',
                          perPage: 4,
                          perMove: 3,
                          rewindSpeed: 100,
                          rewindByDrag:true,
                          breakpoints: {
                              1020: {
                                  perPage: 3,
                                  perMove: 2,
                              },
                              640: {
                                  perPage: 2,
                                  perMove: 1,
                              }
                            }
                        } );
                        
                        splide.mount(); 
      });
  
  </script>
  
  
